<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BareBonesEnterprise.View.QuoteCell">
  <ViewCell.View>
        <StackLayout HorizontalOptions="CenterAndExpand">
          <Label Text="{Binding Content}" Style="{StaticResource TitleStyle}"/>
           <Label Text="{Binding Author}" Style="{StaticResource DescriptionStyle}"/>
        </StackLayout>
  </ViewCell.View>
</ViewCell>
<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuotesApp.View.QuoteCell">
  <ViewCell.View>
        <StackLayout BackgroundColor="Black" Orientation="Vertical" VerticalOptions="FillAndExpand" Margin="0,8,0,0">
            <Label Text="{Binding Content}" Style="{StaticResource DescriptionStyle}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding Author}" Style="{StaticResource TitleStyle}" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
  </ViewCell.View>
</ViewCell>
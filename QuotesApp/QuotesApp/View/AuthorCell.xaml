<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuotesApp.View.AuthorCell">
    <ViewCell.View>
        <StackLayout BackgroundColor="Black" Orientation="Vertical" VerticalOptions="FillAndExpand">
            <Image Source="{Binding ImageSource}" HorizontalOptions="CenterAndExpand" />
            <Label Text="{Binding Name}" Style="{StaticResource TitleStyle}" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ViewCell.View>
</ViewCell>